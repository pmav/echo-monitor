{
  "name": "micromonitor",
  "description": "micromonitor is a fast linux command line tool that outputs a number of metrics from your OS in plain text or json format",
  "version": "0.0.4",
  "author": "pmav",
  "preferGlobal": true,
  "keywords": [
    "monitor", "system", "cpu", "memory", "network", "processes", "disk", "cli", "json", "usage", "utilization"
  ],
  "main": "micfromonitor",
  "bin": {
    "micromonitor": "./bin/micromonitor"
  },
  "engine": [
    "node >=0.6.0"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/pmav/micromonitor.git"
  },
  "dependencies": {
    "yargs": "~1.3.3"
  },
  "bugs": {
    "url": "https://github.com/pmav/micromonitor/issues"
  },
  "licenses": [{
    "type":"MIT",
    "url":"https://github.com/pmav/micromonitor/blob/master/LICENSE"
  }]
}
